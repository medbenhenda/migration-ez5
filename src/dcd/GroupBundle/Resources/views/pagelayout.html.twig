<!--[if (gt IE 9)|!(IE)]><!--><html lang=""><!--<![endif]-->
<head>
    {# TODO: this probably won't be needed anymore as we will relay on the HTTP cache #}
    {% include 'dcdGroupBundle::page_head_displaystyles.html.twig' with { 'user': user } %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% include 'dcdGroupBundle::page_head.html.twig' %}
    {% include 'dcdGroupBundle::page_head_style.html.twig' %}
    {% include 'dcdGroupBundle::page_head_script.html.twig' %}
</head>
<body>
<!-- Complete page area: START -->
<div class="wrapper">
    <!-- Header area: START -->
    {% block header %}
        {% include 'dcdGroupBundle::page_header.html.twig' %}
    {% endblock %}
    <!-- Header area: END -->
    <div class="page">
        <!-- Top menu area: START -->
        {% block headerTools %}
            {#% render "dcdGroupBundle:Default:topMenu" with {'locationId': 2, 'excludeContentTypes': [ 'article' ]}, {'standalone': true} %#}
        {% endblock %}
        <!-- Top menu area: END -->
        {# TODO: implement logic to control path visibility #}
        <!-- Path area: START -->
        {% if pageData.showPath %}
            {% block path %}
                {% include 'dcdGroupBundle::page_toppath.html.twig' %}
            {% endblock %}
        {% endif %}
        <!-- Path area: END -->
        <!-- Main area: START -->
            {% block content %}{% endblock %}
        <!-- Main area: END -->
    </div>
    
</div>
<!-- Complete page area: END -->
<!-- Footer area: START -->
    {% block footer %}
        {% render "dcdGroupBundle:Default:footer" with {'locationId': 60}, {'standalone': true} %}
    {% endblock %}
    <!-- Footer area: END -->
<!-- Footer script area: START -->
{% block footerScript %}
    {% include 'dcdGroupBundle::page_footer_script.html.twig' %}
{% endblock %}
<!-- Footer script area: END -->

</body>
</html>
